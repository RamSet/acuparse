##
# File: .docker/docker-healthcheck
# Script to check services in a container
##

function healthCheckFailed() {
  echo "$1"
  exit 1
}

function healthCheck() {
  pgrep -x cron >/dev/null || healthCheckFailed "CRON HEALTHCHECK FAILED"
  pgrep -x rsyslogd >/dev/null || healthCheckFailed "SYSLOG HEALTHCHECK FAILED"
  pgrep -x apache2 >/dev/null || healthCheckFailed "APACHE2 HEALTHCHECK FAILED"
  mysqladmin ping -h"${MYSQL_HOSTNAME}" -u"${MYSQL_USER}" -p"${MYSQL_PASSWORD}" --silent >/dev/null || healthCheckFailed "SQL HEALTHCHECK FAILED"
  echo ""$(date +'%b %d %H:%M:%S')" ""${HOSTNAME}"" HEALTHCHECK[$$]: OK"
}

echo "Starting Acuparse Service HEALTHCHECK ..."
while true; do
  healthCheck
  sleep 120
done
